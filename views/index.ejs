<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Fluxo de Caixa</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <h1>Fluxo de Caixa</h1>
    <hr>

    <div class="dvCaixas">
      <div>
        <b>Valor total</b><br>
        <%= formataValor(valorTotal) %>
      </div>
      <div>
        <b>Receitas</b><br>
        <%= formataValor(receitas) %>
      </div>
      <div>
        <b>Despesas</b><br>
        <%= formataValor(despesas) %>
      </div>
    </div>    

    <div class="dvSearch">
      <div>
        <form action="/">
          <input type="text" placeholder="Digite algo..." class="form-control" name="tipo">
          <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
      </div>
      <div>
        <a href="/adicionar" class="btn btn-primary">Adicionar</a>
      </div>
    </div>

    <div class="dvTabela">
      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th scope="col">Tipo</th>
            <th scope="col" class="txt-alinhado-direita">Valor</th>
            <th scope="col" class="txt-alinhado-centro">Status</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% caixas.forEach(caixa => { %>
            <tr>
              <td><%= caixa.tipo %></td>
              <td class="txt-alinhado-direita"><%= formataValor(caixa.valor) %></td>
              <td class="txt-alinhado-centro"><%= caixa.status === 1 ? 'Receita' : 'Despesa' %></td>
              <td>
                <div class="<%= caixa.status === 1 ? 'receita-bar' : 'despesa-bar' %>"></div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
